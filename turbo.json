{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**"]
		},
		"build:ci": {
			"dependsOn": ["^build:ci"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"test": {
			"inputs": [
				"$TURBO_DEFAULT$",
				".env*",
				"**/*.test.*",
				"**/*.spec.*",
				"**/test/**",
				"**/tests/**",
				"vitest.config.*",
				"package.json",
				"tsconfig*.json"
			],
			"outputs": ["coverage/**", ".vitest-reports/**"],
			"cache": true
		},
		"test:unit": {
			"inputs": [
				"$TURBO_DEFAULT$",
				".env*",
				"**/*.test.*",
				"**/*.spec.*",
				"**/test/**",
				"vitest.config.*",
				"package.json",
				"tsconfig*.json"
			],
			"outputs": ["coverage/**", ".vitest-reports/**"],
			"cache": true
		},
		"test:integration": {
			"inputs": [
				"$TURBO_DEFAULT$",
				".env*",
				"**/*.integration.test.*",
				"**/tests/integration/**",
				"vitest.integration.config.*",
				"package.json",
				"tsconfig*.json"
			],
			"outputs": ["coverage/**", ".vitest-reports/**"],
			"cache": true
		},
		"test:watch": {
			"cache": false,
			"persistent": true
		},
		"test:coverage": {
			"inputs": [
				"$TURBO_DEFAULT$",
				".env*",
				"**/*.test.*",
				"**/*.spec.*",
				"**/test/**",
				"**/tests/**"
			],
			"outputs": ["coverage/**", ".vitest-reports/**"],
			"cache": true
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"dev:setup": {
			"cache": false,
			"persistent": true
		}
	}
}
