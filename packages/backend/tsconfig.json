{
	"compilerOptions": {
		"target": "ES2021",
		"lib": ["ES2021"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@pulse/core": ["../core/src/index.ts"],
			"@pulse/core/*": ["../core/src/*"],
			"@pulse/ideas-logic": ["../ideas-logic/src/index.ts"],
			"@pulse/ideas-logic/*": ["../ideas-logic/src/*"]
		}
	},
	"include": ["convex/**/*.ts"],
	"exclude": [
		"convex/**/*.test.ts",
		"convex/**/*.spec.ts",
		"convex/**/*.convex.test.ts",
		"node_modules"
	]
}
