{
	"name": "pulse",
	"private": true,
	"engines": {
		"node": ">=22 <23"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"typecheck": "turbo check-types",
		"repo:guards": "node scripts/check-convex-guards.cjs && node scripts/check-internal-calls.cjs && node scripts/check-suppressions.mjs",
		"verify:fast": "pnpm run repo:guards && pnpm run check && pnpm run typecheck",
		"repo:guards:suppressions": "node scripts/check-suppressions.mjs",
		"preinstall": "node ./scripts/verify-toolchain.mjs",
		"prepare": "",
		"check": "biome check .",
		"biome:fix": "biome format --write . && biome lint --write .",
		"build": "turbo build",
		"build:ci": "turbo build:ci",
		"build:schema": "node scripts/merge-schemas.mjs",
		"setup:symlinks": "node scripts/setup-symlinks.js",
		"cleanup:symlinks": "node scripts/cleanup-symlinks.js",
		"dev": "node ./scripts/dev.mjs",
		"dev:stop": "node ./scripts/stop.mjs",
		"test": "turbo run test",
		"test:unit": "turbo run test:unit",
		"test:integration": "turbo run test:integration",
		"test:contracts": "vitest run -c tests/contracts/vitest.config.ts",
		"test:e2e": "playwright test",
		"test:e2e:smoke": "playwright test --grep @smoke",
		"test:watch": "turbo run test:watch",
		"test:coverage": "turbo run test:coverage",
		"test:backend": "turbo run test --filter=@pulse/backend",
		"test:web": "turbo run test --filter=web",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F @pulse/backend dev",
		"dev:setup": "turbo -F @pulse/backend dev:setup",
		"setup:local": "node ./scripts/setup-local.mjs",
		"dev:storybook": "turbo -F storybook dev"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@intellectronica/ruler": "0.2.19",
		"@types/node": "^22.18.0",
		"@vitest/coverage-v8": "^3.2.4",
		"concurrently": "9.2.1",
		"execa": "9.6.0",
		
		"tree-kill": "1.2.2",
		"turbo": "^2.5.4",
		"vite": "^6.2.2",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "^3.2.4"
	},

	"pnpm": {
		"overrides": {
			"@vitejs/plugin-react": "^4.3.4"
		}
	},
	"packageManager": "pnpm@10.15.0"
}
