{
	"name": "pulse",
	"private": true,
	"engines": {
		"node": ">=22 <23"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"typecheck": "turbo check-types",
		"repo:guards": "node scripts/check-convex-guards.cjs && node scripts/check-internal-calls.cjs",
		"preinstall": "node ./scripts/verify-toolchain.mjs",
		"prepare": "husky",
		"check": "biome check .",
		"build": "turbo build",
		"build:schema": "node scripts/merge-schemas.mjs",
		"setup:symlinks": "node scripts/setup-symlinks.js",
		"cleanup:symlinks": "node scripts/cleanup-symlinks.js",
		"ruler:apply": "ruler apply --local-only",
		"ruler:revert": "ruler revert --local-only",
		"dev": "node ./scripts/dev.mjs",
		"dev:stop": "node ./scripts/stop.mjs",
		"test": "turbo run test",
		"test:watch": "turbo run test:watch",
		"test:coverage": "turbo run test:coverage",
		"test:backend": "turbo run test --filter=@pulse/backend",
		"test:web": "turbo run test --filter=web",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F @pulse/backend dev",
		"dev:setup": "turbo -F @pulse/backend dev:setup",
		"dev:storybook": "turbo -F storybook dev",
		"dev:server-web": "pnpm run dev:server && pnpm run dev:web"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@intellectronica/ruler": "0.2.19",
		"@types/node": "^22.18.0",
		"concurrently": "9.2.1",
		"execa": "9.6.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"tree-kill": "1.2.2",
		"turbo": "^2.5.4"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx,cjs,mjs,json,jsonc}": [
			"biome check --write --no-errors-on-unmatched"
		],
		"*.{md,mdx}": [
			"biome format --write --no-errors-on-unmatched"
		]
	},
	"pnpm": {
		"overrides": {
			"vite": "^6.3.5",
			"@vitejs/plugin-react": "^4.3.4",
			"vitest": "^3.2.4"
		}
	},
	"packageManager": "pnpm@10.15.0"
}
