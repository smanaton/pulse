{
	"$schema": "https://opencode.ai/config.json",
	"mcp": {
		"Context7": {
			"type": "local",
			"enabled": true,
			"command": ["docker", "run", "-i", "--rm", "mcp/context7"]
		},
		"convex": {
			"type": "local",
			"enabled": true,
			"command": ["cmd", "/c", "npx", "convex", "mcp", "start"]
		},
		"playwright": {
			"type": "local",
			"enabled": true,
			"command": ["docker", "run", "-i", "--rm", "mcp/playwright"]
		}
	}
}
